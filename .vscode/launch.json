{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Dama Admin Server Launch",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-blazor",
            "program": "${workspaceFolder}/src/Web/DamaAdmin/Server/bin/Debug/net5.0/DamaAdmin.Server.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Web/DamaAdmin",
            "stopAtEntry": false,
            "console": "internalConsole",
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },
        {
            "name": "Backoffice Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-backoffice",
            "program": "${workspaceFolder}/src/Web/Backoffice/bin/Debug/net5.0/Backoffice.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Web/Backoffice",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        }
    ]
}